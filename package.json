{
  "name": "codexpilot",
  "displayName": "codexpilot",
  "description": "An Extension to chat with AI using codebase context",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codexpilotChatView",
    "onCommand:codexpilot.helloWorld",
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codexpilot.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "codexpilot.setApiKey",
        "title": "Codexpilot: Set Gemini API Key",
        "category": "Codexpilot"
      },
      {
        "command": "codexpilot.clearContext",
        "title": "Codexpilot: Clear Context",
        "category": "Codexpilot"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codexpilotViewContainer",
          "title": "Codexpilot",
          "icon": "resources/rocket.svg"
        }
      ]
    },
    "views": {
      "codexpilotViewContainer": [
        {
          "type": "webview",
          "id": "codexpilotChatView",
          "name": "Chat",
          "contextualTitle": "Codexpilot Chat"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "@types/highlight.js": "^9.12.4",
    "@types/markdown-it": "^14.1.2",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0"
  }
}
